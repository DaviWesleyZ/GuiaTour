<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.guiatour.Activity.ResetSenhaActivity"
    android:orientation="vertical"
    android:background="@drawable/fundotelaprincipal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se você não lembra a sua senha, insira seu email abaixo para que possamos enviar as instruções para a redefinição da senha"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:src="@drawable/logotour"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="80dp"
        />


    <EditText
        android:id="@+id/editEmail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Seu email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnResetar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resetar Senha"
        android:layout_gravity="center"/>

</LinearLayout>
